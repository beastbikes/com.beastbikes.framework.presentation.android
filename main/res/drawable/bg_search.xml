<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="#ffefeef4" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp">
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <corners
                android:bottomLeftRadius="3.5dp"
                android:bottomRightRadius="3.5dp"
                android:topLeftRadius="3.5dp"
                android:topRightRadius="3.5dp" />
        </shape>
    </item>

</layer-list>